<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F6FF">

    <!-- Scrollable Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="#0D47A1"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvStudentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/halo_selamat_datang"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tvClassInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tulis_tugas_anda_di_bawah"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvCurrentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tanggal_sekarang"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>


            <!-- SearchView -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_margin="16dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:iconifiedByDefault="false"
                android:padding="8dp"
                android:queryHint="Cari tugas..." />

            <!-- Form Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/edtTodoTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Judul Tugas"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:elevation="2dp"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/edtTodoDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Deskripsi"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:elevation="2dp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnAddTodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:elevation="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- RecyclerView harus berada di luar ScrollView agar performa tetap bagus -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTodos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:background="#F2F6FF"/>
</LinearLayout>
